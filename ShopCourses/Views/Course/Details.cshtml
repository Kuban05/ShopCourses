@model ShopCourses.Models.Course
@using ShopCourses.Infrastucture

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ListaKategoriZawartosc">
    @Html.Action("MenuCategory")
    <div id="KategorieListPrawaSekcja">
        <div id="Breadcrumb">
            <img src="../Content/Images/dommaly.png" />
            <a href="link">
                Start > ASP.NET
            </a>
        </div>
        <section id="SekcjaKurs">
            <div id="KursLewa">
                <img src="@Url.PathToImages(Model.NamePicture)" />
            </div>
            <div id="KursPrawa">
                <div id="KursNazwa">
                    <h1>
                        @Model.TitleCourse
                    </h1>
                    <h2>
                        @Model.AuthorCourse
                    </h2>
                </div>
                <div id="KursCena">
                    <div>
                        @string.Format("{0:0.##}", Model.PriceCourse)<span>PLN</span>
                    </div>
                    <a href="@Url.Action("AddToBasket","Basket", new { id = Model.CourseId})"></a>
                </div>
                <div id="KursOpis">
                    @Model.DescriptionCourse
                </div>
                <div id="KursInfo">
                    @Model.ShortenedDescription
                </div>
            </div>
        </section>
    </div>
</div>